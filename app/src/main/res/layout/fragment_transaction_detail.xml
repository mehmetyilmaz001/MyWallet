<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ninjakod.mehmetyilmaz.mywallet.fragment.TransactionDetailActivityFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:listPreferredItemHeight"
        android:orientation="vertical"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/list_item_transaction_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="20"
            android:layout_weight="0.9"
            android:textSize="@dimen/transactions_list_date_day"
            android:gravity="bottom" />

        <TextView
            android:id="@+id/list_item_transaction_date_month"
            android:layout_width="match_parent"
            android:layout_height="?android:listPreferredItemHeight"
            android:gravity="top"
            android:layout_gravity="center"
            android:text="April"
            android:layout_weight="1.2"
            android:layout_marginTop="0dp" />

        <TextView
            android:id="@+id/list_item_transaction_date_year"
            android:layout_width="match_parent"
            android:layout_height="?android:listPreferredItemHeight"
            android:gravity="top"
            android:layout_gravity="center"
            android:text="2015"
            android:layout_weight="1.2"/>

    </LinearLayout><!-- Date -->

    <TextView
        android:text="Transaction Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/transaction_detail_name_txtview"
        />

</RelativeLayout>
