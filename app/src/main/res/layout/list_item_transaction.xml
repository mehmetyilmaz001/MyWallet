<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:id="@+id/list_item_transaction_linear_layout"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:listPreferredItemHeight"
        android:orientation="vertical"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/list_item_transaction_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="20"
            android:layout_weight="0.9"
            android:textSize="@dimen/transactions_list_date_day"
            android:gravity="bottom" />

        <TextView
            android:id="@+id/list_item_transaction_date_month"
            android:layout_width="match_parent"
            android:layout_height="?android:listPreferredItemHeight"
            android:gravity="top"
            android:layout_gravity="center"
            android:text="April"
            android:layout_weight="1.2"
            android:layout_marginTop="0dp" />

        <TextView
            android:id="@+id/list_item_transaction_date_year"
            android:layout_width="match_parent"
            android:layout_height="?android:listPreferredItemHeight"
            android:gravity="top"
            android:layout_gravity="center"
            android:text="2015"
            android:layout_weight="1.2"/>

    </LinearLayout><!-- Date -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"

        android:orientation="vertical"
        android:layout_gravity="left"
        android:gravity="center"
        android:layout_height="?android:listPreferredItemHeight"
        >

        <TextView
            android:id="@+id/list_item_transaction_account_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="Banka"
            android:layout_weight="0.2"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/list_item_transaction_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:layout_gravity="left"
            android:text="Maaş Ödemesi"
            android:layout_weight="1"/>


    </LinearLayout><!--Info -->

    <TextView
        android:id="@+id/list_item_transaction_amount"
        android:layout_width="match_parent"
        android:layout_height="?android:listPreferredItemHeight"
        android:gravity="top|right"
        android:layout_gravity="right"
        android:text="30000 TL"
        android:layout_weight="1"
        android:textSize="@dimen/abc_text_size_medium_material"
        />

</LinearLayout>